<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size_16"
    android:background="@drawable/green_background"
    tools:context="mx.edu.utng.drinks.MainActivity">

    <Button
        android:id="@+id/btn_choose_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edt_drink_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/size_74"
        android:text="@string/select_image"
        android:background="@drawable/border"
        android:textStyle="bold"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/imv_drink_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_200"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/size_24"
        android:layout_marginStart="@dimen/size_24"
        android:layout_toEndOf="@+id/btn_choose_file"
        android:layout_toRightOf="@+id/btn_choose_file" />

    <EditText
        android:id="@+id/edt_drink_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/border"
        android:gravity="center"
        android:hint="@string/drink_name"
        android:paddingLeft="@dimen/size_10"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/size_25"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_drink_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edt_drink_name"
        android:layout_marginTop="@dimen/size_38"
        android:background="@drawable/border"
        android:gravity="center"
        android:hint="@string/drink_description"
        android:paddingLeft="@dimen/size_10"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/size_25"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/pgb_loading"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_upload"
        android:layout_marginTop="@dimen/size_50"
        />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_drink_description"
        android:layout_marginTop="@dimen/size_30"
        android:layout_toLeftOf="@+id/imv_drink_image"
        android:layout_toStartOf="@+id/imv_drink_image"
        android:text="@string/upload"
        android:background="@drawable/border"
        android:textStyle="bold"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/btn_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pgb_loading"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/size_60"
        android:layout_marginRight="@dimen/size_60"
        android:text="@string/show"
        android:background="@drawable/border"
        android:textStyle="bold"
        android:textColor="@color/white"
        />

</RelativeLayout>
